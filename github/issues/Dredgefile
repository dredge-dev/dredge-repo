runtimes:
- name: gh-cli
  type: container
  image: ghcr.io/supportpal/github-gh-cli
  cache:
  - /root/.config/gh
workflows:
- name: init
  inputs:
    URL: GitHub issues url
  steps:
  - edit_dredgefile:
      add_variables:
        GITHUB_ISSUES_URL: '{{ .URL }}'
      add_buckets:
        - name: issue
          import:
            bucket: issue
buckets:
- name: issue
  description: List, create, update issues
  workflows:
  - name: open
    description: Open the issues ui
    steps:
    - browser:
        url: '{{ .GITHUB_ISSUES_URL }}'
  - name: list
    description: List the open issues
    steps:
    - shell:
        cmd: /bin/bash -c "gh auth status 2>/dev/null || gh auth login --hostname github.com"
        runtime: gh-cli
    - shell:
        cmd: gh issue list
        runtime: gh-cli
  - name: create
    description: Create a new issue
    steps:
    - shell:
        cmd: /bin/bash -c "gh auth status 2>/dev/null || gh auth login --hostname github.com"
        runtime: gh-cli
    - shell:
        cmd: gh issue create
        runtime: gh-cli

